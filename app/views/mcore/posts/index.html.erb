<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", [@user, post] %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_user_post_path(@user) %>
<%= link_to "Back to user", user_path(@user) %>
